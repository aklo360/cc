<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.ccwtf.stream</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/claude/.nvm/versions/node/v22.22.0/bin/node</string>
        <string>/Users/claude/ccwtf/stream/dist/index.js</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/claude/ccwtf/stream</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/claude/.nvm/versions/node/v22.22.0/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <string>/Users/claude</string>
        <key>NODE_ENV</key>
        <string>production</string>
    </dict>

    <!-- Auto-restart on crash -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>

    <!-- Restart throttling: wait 10 seconds between restarts -->
    <key>ThrottleInterval</key>
    <integer>10</integer>

    <!-- Run at load (boot) -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Process priority -->
    <key>ProcessType</key>
    <string>Interactive</string>

    <!-- Logging -->
    <key>StandardOutPath</key>
    <string>/Users/claude/ccwtf/stream/stream.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/claude/ccwtf/stream/stream.log</string>

    <!-- Resource limits -->
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>4096</integer>
    </dict>
    <key>HardResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>8192</integer>
    </dict>
</dict>
</plist>
